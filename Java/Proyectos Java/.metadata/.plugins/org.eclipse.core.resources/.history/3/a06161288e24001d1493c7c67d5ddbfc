package empelados;

public class Pruebas {

	public static void main(String[] args) {
				
	Empleados trabajador1 = new Empleados("Paco","raaaaaa");
	Empleados trabajador2 = new Empleados("Antonia ","raaaaa");
	
	String seccion="lalala";

	System.out.println(trabajador1.getCambiaSeccion());
				}}
class Empleados{
	private final String nombre;
	private String seccion;
	
		public  Empleados(String nom ,String sec) {
		
		nombre=nom;
		seccion=sec;
			}
	
	public void setCambiaSeccion(String seccion) {
		
	 this.seccion=seccion;
	}
		
	public String getCambiaSeccion() {
		return "El nombre es: "+ nombre+"\n"+"Sección: "+seccion;
	}		}