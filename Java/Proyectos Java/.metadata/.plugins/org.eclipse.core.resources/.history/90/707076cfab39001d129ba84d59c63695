
import javax.swing.*;
//Primero importo la biblioteca javax.swing para poder usar el JOptionPane de esta manera el usuario puede introducir directamente la frase o palabra.

public class palindrome {
	
	public static void main(String[] args) {
		//Declaro la variable "cadena_palabra" para que el usuario introduzca mediante el panel la palabra o frase que desee. 
		String[] cadena_palabra = {((JOptionPane.showInputDialog("Introduce una palabra o frase por favor")))};
		//Declaro un for para que cuando se muestre a través del terminal aparezca si es o no un palíndromo
		for (String cadena : cadena_palabra) {
			System.out.println("¿'" + cadena + "' es un palíndromo? " + esPalindromo(cadena));
		}}
		//Ahora se crea un método que llamaré esPalindromo donde se anulan las minúsculas, mayúsculas, comas, espacios y tildes. 
		public static boolean esPalindromo(String cadena) {
					cadena = cadena.toLowerCase().replace("á", "a").replace("é", "e").replace("í", "i").replace("ó", "o")
					.replace("ú", "u").replace(" ", "").replace(".", "").replace(",", "");
			
	  // Declaro una variable llamada invertida y a través de la clase StringBuilder (nos permite invertir el orden de los caracteres) 
			String invertida = new StringBuilder(cadena).reverse().toString();
		//utilizado el resultado devuelto para ver si es igual por eso en java utilizo equals 
			return invertida.equals(cadena);
		}	}
// Alejandro López Sanmartino, Prueba para Junior Software Engineer CGI